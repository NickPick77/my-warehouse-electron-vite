{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/*", "src/preload/*", "src/preload/*.ts", "src/renderer/*", "src/renderer/**/*.ts", "src/renderer/src/*", "src/main/database/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@components/*": [
        "src/renderer/src/components"
      ],
      "@views/*": [
        "src/renderer/src/views"
      ]
    }
  }
}
